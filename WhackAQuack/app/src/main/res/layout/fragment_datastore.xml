<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textDS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:text="Example usage of data store"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editKeyField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Key"
            android:inputType="textShortMessage" />

        <EditText
            android:id="@+id/editValueField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Value"
            android:inputType="textLongMessage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/setDataButton"
                android:layout_width="196dp"
                android:layout_height="71dp"
                android:text="Set"
                 />
            <Button
                android:id="@+id/getDataButton"
                android:layout_width="196dp"
                android:layout_height="71dp"
                android:text="Get"
                app:layout_constraintBottom_toTopOf="@+id/text_save_score"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/textJSON"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text=""
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textError"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text=""
            android:textAlignment="center" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>